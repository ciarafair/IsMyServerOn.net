{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2020",
		"jsx": "react",
		"strictNullChecks": true,
		"strictFunctionTypes": true
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"baseUrl": "/",
	"compileOnSave": true,
	"paths": {
		"*": [
			"/server/src",
			"/server/public",
			"/client/src",
			"/client/public"
		]
	},
}
