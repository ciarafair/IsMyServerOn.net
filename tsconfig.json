{
	"compilerOptions": {
		"outDir": "public/dist",
		"module": "ESNext",
		"target": "ES6",
		"lib": [
			"ES6",
			"dom",
			"WebWorker"
		],
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"rootDir": "./",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"jsx": "react-jsx",
		"baseUrl": "/",
		"paths": {
			"*": [
				"/server/src",
				"/server/public",
				"/client/src",
				"/client/public"
			]
		},
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules"
	],
	"compileOnSave": true,
}
