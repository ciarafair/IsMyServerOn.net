{
	"compilerOptions": {
		"outDir": "public/dist",
		"module": "ESNext",
		"target": "ES6",
		"lib": [
			"ES6",
			"dom"
		],
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"rootDir": "./",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"jsx": "react-jsx",
		"baseUrl": "/",
		"paths": {
			"*": [
				"/src/*",
				"/public/*"
			]
		},
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules"
	]
}
